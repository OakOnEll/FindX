<?xml version="1.0" encoding="utf-8"?>
<com.oakonell.findx.custom.CustomLevelGridCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/level_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="100" >

        <TextView
            android:id="@+id/level_name"
            style="@style/FindXButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:minLines="2"
            android:text="Button" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/menu"
            android:layout_marginTop="10dp"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_item_menu" />
    </FrameLayout>

    <RatingBar
        android:id="@+id/rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:isIndicator="true"
        android:numStars="3"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/author_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/byLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#555555"
            android:gravity="right"
            android:padding="1sp"
            android:paddingRight="8sp"
            android:text="@string/authored_by"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#555555"
            android:padding="1sp"
            android:text="Author"
            android:textColor="#000000" />
    </LinearLayout>

</com.oakonell.findx.custom.CustomLevelGridCell>